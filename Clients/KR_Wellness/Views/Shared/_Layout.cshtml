    var app = document.getElementById('app');

    var typewriter = new Typewriter(app, {
        loop: true
    });

    typewriter.typeString('body')
        .pauseFor(2500)
        .deleteAll()
        .typeString('mind')
        .pauseFor(2500)
        .deleteChars(7)
        .typeString('spirit')
        .pauseFor(2500)
