@{
    ViewBag.Title = "Home Page";
}
<!-- Hero section -->
<section class="hero-section set-bg" data-setbg="../Content/img/bg.jpg">
    <div class="container h-100">
        <div class="hero-content text-white">
            <div class="row">
                <div class="col-lg-6 pr-0">
                    <h2>Your friendly neighbourhood web developers</h2>
                    <p><span><label class="text-accent">@ViewBag.CatchPhrase</label></span> Get your business online today for as little as <span><label class="text-accent">£19.99/month</label></span>. That's half the price of your average monthly phone bill. Not bad, hey!</p>
                    <a href="#" class="site-btn">Start your journey</a>
                </div>
            </div>
            <div class="hero-rocket">
                <img src="../Content/img/rocket.png" alt="">
            </div>
        </div>
    </div>
</section>
<!-- Hero section end -->
<!-- Features section -->
<section class="features-section spad">
