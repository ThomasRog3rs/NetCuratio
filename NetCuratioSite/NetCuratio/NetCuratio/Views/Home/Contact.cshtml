@model NetCuratio.Models.ContactViewModel

<!-- Page Top section -->
<section class="page-top-section-small set-bg" data-setbg="../Content/img/page-top-bg.jpg">
    <div class="container">
        <div class="row">
        </div>
    </div>
</section>
<!-- Page Top section end -->
<!-- Contact section -->
<section class="contact-section mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="justify-content-center">Get in touch</h2>

                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "contact-form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6 mb-4">
                    @Html.TextBoxFor(x => x.SendersName, new { placeholder = Html.DisplayNameFor(x => x.SendersName).ToHtmlString(), @class = "mb-1" })
                    @Html.ValidationMessageFor(m => m.SendersName, null, new { @class = "pt-1" })
                </div>
                <div class="col-md-6 mb-4">
                    @Html.TextBoxFor(x => x.SendersEmail, new { placeholder = Html.DisplayNameFor(x => x.SendersEmail).ToHtmlString(), @class = "mb-1" })
                    @Html.ValidationMessageFor(m => m.SendersEmail, null, new { @class = "pt-1" })
                </div>
                <div class="col-md-12 mb-4">
                    @Html.TextBoxFor(x => x.Subject, new { placeholder = Html.DisplayNameFor(x => x.Subject).ToHtmlString(), @class = "mb-1" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
                <div class="col-md-12 mb-4">
                    @Html.TextAreaFor(x => x.Message, new { placeholder = Html.DisplayNameFor(x => x.Message).ToHtmlString(),  @class = "mb-0" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
                <div class="col-md-12">
                    <button class="site-btn float-right">Send</button>
                </div>
            </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- Contact section end -->