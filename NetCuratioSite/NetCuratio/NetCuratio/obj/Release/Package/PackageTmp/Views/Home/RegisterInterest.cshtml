@model NetCuratio.Models.RegisterInterestViewModel

<!-- Page Top section -->
<section class="page-top-section-small set-bg" data-setbg="../Content/img/page-top-bg.jpg">

</section>
<!-- Page Top section end -->
<!-- Contact section -->
<section class="contact-section mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title">Where should we send your 'Getting Started' pack to?</h2>

                @using (Html.BeginForm("RegisterInterest", "Home", FormMethod.Post, new { @class = "contact-form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.SelectedPackage)
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            @Html.TextBoxFor(x => x.Name, new { placeholder = Html.DisplayNameFor(x => x.Name).ToHtmlString(), @class = "mb-1" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "pt-1" })
                        </div>
                        <div class="col-md-6 mb-4">
                            @Html.TextBoxFor(x => x.Email, new { placeholder = Html.DisplayNameFor(x => x.Email).ToHtmlString(), @class = "mb-1" })
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "pt-1" })
                        </div>
                        <div class="col-md-12 mb-4">
                            <button class="site-btn float-right">Send</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- Contact section end -->
